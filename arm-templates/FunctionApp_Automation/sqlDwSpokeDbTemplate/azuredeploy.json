{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "existingLogicalServerName": {
            "type": "string",
            "metadata": {
                "description": "Name of pre-existing server hosting SQL DataWarehouse."
            }
        },
        "existingLogicalServerLocation": {
            "type": "string",
            "allowedValues": [
                "East Asia",
                "Southeast Asia",
                "Australia Southeast",
                "Canada Central",
                "Canada East",
                "China North",
                "China East",
                "Central India",
                "South India",
                "Japan East",
                "Japan West",
                "Korea Central",
                "North Central US",
                "South Central US",
                "East US",
                "East US 2",
                "West US",
                "West US 2",
                "Central US",
                "West Central US",
                "North Europe",
                "West Europe",
                "Brazil South",
                "US Gov Iowa",
                "US Gov Virginia",
                "US Gov Texas",
                "US Gov Arizona",
                "Germany Central",
                "Germany Northeast",
                "UK West",
                "UK South"
            ]
        },
        "existingLogicalServerAdminUserName": {
            "type": "string"
        },
        "existingLogicalServerAdminPassword": {
            "type": "securestring"
        },
        "existingSqlDwDatabaseName": {
            "type": "string",
            "metadata": {
                "description": "The database name of your pre-existing SQL Data Warehouse."
            }
        },
        "automationAccountLocation": {
            "type": "string",
            "defaultValue": "West Central US",
            "allowedValues": [
                "Southeast Asia",
                "Australia Southeast",
                "Canada Central",
                "Japan East",
                "Korea Central",
                "South Central US",
                "East US 2",
                "West US 2",
                "West Central US",
                "Central India",
                "UK South",
                "West Europe",
                "North Europe",
                "Brazil South"
            ]
        },
        "numSpokeDb": {
            "type": "int",
            "metadata": {
                "description": "The number of databases to deploy based on a schema setting here in the data warehouse instance. If you already have some number of spoke databases, ensure that you choose N + the existing number of databases."
            }
        },
        "deploymentGuid": {
            "type": "string"
        }
    },
    "variables": {
        "spokeTemplateUri": "https://raw.githubusercontent.com/Microsoft/sql-data-warehouse-samples/master/arm-templates/sqlDwSpokeDbTemplate/nested/spokeDb.json",
        "automationTemplateUri": "https://raw.githubusercontent.com/Microsoft/sql-data-warehouse-samples/master/arm-templates/sqlDwSpokeDbTemplate/nested/automation.json",
        "elasticPoolName": "[concat('pool', uniquestring(resourceGroup().id))]",
        "spokeDbBaseName": "[concat('spoke', uniquestring(resourceGroup().id), 'dbn')]",
        "serverLocationCondensed": "[replace(parameters('existingLogicalServerLocation'),' ','')]",
        "serverRegion": "[toLower(variables('serverLocationCondensed'))]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "spokeDbDeployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('spokeTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "databaseName": {
                        "value": "[variables('spokeDbBaseName')]"
                    },
                    "databaseCount": {
                        "value": "[parameters('numSpokeDb')]"
                    },
                    "logicalServerName": {
                        "value": "[parameters('existingLogicalServerName')]"
                    },
                    "serverLocation": {
                        "value": "[variables('serverRegion')]"
                    },
                    "poolEdition": {
                        "value": "Standard"
                    },
                    "poolDtu": {
                        "value": 800
                    },
                    "poolSize": {
                        "value": 256000
                    },
                    "databaseDtuMin": {
                        "value": 0
                    },
                    "databaseDtuMax": {
                        "value": 100
                    },
                    "elasticPoolName": {
                        "value": "[variables('elasticPoolName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "automationDeployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('automationTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "logicalServerName": {
                        "value": "[parameters('existingLogicalServerName')]"
                    },
                    "serverAdminUserName": {
                        "value": "[parameters('existingLogicalServerAdminUserName')]"
                    },
                    "serverAdminPassword": {
                        "value": "[parameters('existingLogicalServerAdminPassword')]"
                    },
                    "datawarehouseName": {
                        "value": "[parameters('existingSqlDwDatabaseName')]"
                    },
                    "databaseCount": {
                        "value": "[parameters('numSpokeDb')]"
                    },
                    "databaseBaseName": {
                        "value": "[variables('spokeDbBaseName')]"
                    },
                    "automationAccountLocation": {
                        "value": "[parameters('automationAccountLocation')]"
                    },
                    "guid": {
                        "value": "[parameters('deploymentGuid')]"
                    }
                }
            },
            "dependsOn": [
                "spokeDbDeployment"
            ]
        }
    ],
    "outputs": {}
}
