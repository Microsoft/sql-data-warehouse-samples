          "04:00 AM (  4:00 )",
          "04:30 AM (  4:30 )",
          "05:00 AM (  5:00 )",
          "05:30 AM (  5:30 )",
          "06:00 AM (  6:00 )",
          "06:30 AM (  6:30 )",
          "07:00 AM (  7:00 )",
          "07:30 AM (  7:30 )",
          "08:00 AM (  8:00 )",
          "08:30 AM (  8:30 )",
          "09:00 AM (  9:00 )",
          "09:30 AM (  9:30 )",
          "10:00 AM ( 10:00 )",
          "10:30 AM ( 10:30 )",
          "11:00 AM ( 11:00 )",
          "11:30 AM ( 11:30 )",
          "12:00 PM ( 12:00 )",
          "12:30 PM ( 12:30 )",
          "01:00 PM ( 13:00 )",
          "01:30 PM ( 13:30 )",
          "02:00 PM ( 14:00 )",
          "02:30 PM ( 14:30 )",
          "03:00 PM ( 15:00 )",
          "03:30 PM ( 15:30 )",
          "04:00 PM ( 16:00 )",
          "04:30 PM ( 16:30 )",
          "05:00 PM ( 17:00 )",
          "05:30 PM ( 17:30 )",
          "06:00 PM ( 18:00 )",
