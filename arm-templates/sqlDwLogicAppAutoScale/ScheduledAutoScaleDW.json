          "08:00 PM ( 20:00 )",
          "08:30 PM ( 20:30 )",
          "09:00 PM ( 21:00 )",
          "09:30 PM ( 21:30 )",
          "10:00 PM ( 22:00 )",
          "10:30 PM ( 22:30 )",
          "11:00 PM ( 23:00 )",
          "11:30 PM ( 23:30 )"
      ]
    },
    "ScaleUpSLO": {
      "type": "string",
      "metadata": "Desired SLO of data warehouse at time of scale up",
      "allowedValues": [
        "DW100c",
        "DW200c",
        "DW300c",
        "DW400c",
        "DW500c",
        "DW1000c",
        "DW1500c",
        "DW2000c",
        "DW2500c",
        "DW3000c",
        "DW5000c",
        "DW6000c",
        "DW7500c",
        "DW10000c",
        "DW15000c",
        "DW30000c"
      ]
    },
    "ScaleDownTime": {
      "type": "string",
      "metadata": "Time of day when the data warehouse will be scaled down",
       "allowedValues": [
          "12:00 AM (  0:00 )",
          "12:30 AM (  0:30 )",
          "01:00 AM (  1:00 )",
          "01:30 AM (  1:30 )",
          "02:00 AM (  2:00 )",
          "02:30 AM (  2:30 )",
          "03:00 AM (  3:00 )",
          "03:30 AM (  3:30 )",
          "04:00 AM (  4:00 )",
          "04:30 AM (  4:30 )",
          "05:00 AM (  5:00 )",
          "05:30 AM (  5:30 )",
          "06:00 AM (  6:00 )",
          "06:30 AM (  6:30 )",
          "07:00 AM (  7:00 )",
          "07:30 AM (  7:30 )",
          "08:00 AM (  8:00 )",
          "08:30 AM (  8:30 )",
          "09:00 AM (  9:00 )",
          "09:30 AM (  9:30 )",
          "10:00 AM ( 10:00 )",
          "10:30 AM ( 10:30 )",
          "11:00 AM ( 11:00 )",
          "11:30 AM ( 11:30 )",
          "12:00 PM ( 12:00 )",
          "12:30 PM ( 12:30 )",
          "01:00 PM ( 13:00 )",
          "01:30 PM ( 13:30 )",
          "02:00 PM ( 14:00 )",
          "02:30 PM ( 14:30 )",
          "03:00 PM ( 15:00 )",
          "03:30 PM ( 15:30 )",
          "04:00 PM ( 16:00 )",
          "04:30 PM ( 16:30 )",
          "05:00 PM ( 17:00 )",
          "05:30 PM ( 17:30 )",
          "06:00 PM ( 18:00 )",
          "06:30 PM ( 18:30 )",
          "07:00 PM ( 19:00 )",
          "07:30 PM ( 19:30 )",
          "08:00 PM ( 20:00 )",
          "08:30 PM ( 20:30 )",
          "09:00 PM ( 21:00 )",
          "09:30 PM ( 21:30 )",
          "10:00 PM ( 22:00 )",
          "10:30 PM ( 22:30 )",
          "11:00 PM ( 23:00 )",
          "11:30 PM ( 23:30 )"
      ]
    },
    "ScaleDownSLO": {
      "type": "string",
      "metadata": "Desired SLO of data warehouse at time of scale down",
      "allowedValues": [
        "DW100c",
        "DW200c",
        "DW300c",
        "DW400c",
        "DW500c",
        "DW1000c",
        "DW1500c",
        "DW2000c",
        "DW2500c",
        "DW3000c",
        "DW5000c",
        "DW6000c",
        "DW7500c",
        "DW10000c",
        "DW15000c",
        "DW30000c"
      ]
    }
  },
  "variables": {
    "scaleDownTimeMinute": "[replace(split(substring(parameters('scaleDownTime'), 11, 5), ':')[1],'00', '0')]",
    "scaleDownTimeHour": "[split(substring(parameters('scaleDownTime'), 11, 5), ':')[0]]",
    "scaleUpTimeMinute": "[replace(split(substring(parameters('scaleUpTime'), 11, 5), ':')[1],'00', '0')]",
    "scaleUpTimeHour": "[split(substring(parameters('scaleUpTime'), 11, 5), ':')[0]]",
    "recurrenceHours": ["[variables('scaleDownTimeHour')]", "[variables('scaleUpTimeHour')]"],
    "recurrenceMinutes": [0, 30],
    "scaleDownTimeString": "[substring(parameters('scaleDownTime'), 0, 8)]",
    "scaleUpTimeString": "[substring(parameters('scaleUpTime'), 0, 8)]",
    "dailySchedule": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
    "weekdaySchedule": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
    "recurrenceSchedule": "[if(equals(parameters('Frequency'), 'Weekdays'), variables('weekdaySchedule'), variables('dailySchedule'))]"
  },
  "resources": [
    {
      "name": "[parameters('LogicAppName')]",
      "apiVersion": "2017-07-01",
      "type": "Microsoft.Logic/workflows",
      "location": "[parameters('DeploymentLocation')]",
      "identity": { "type": "SystemAssigned"},
      "properties": {
        "state": "Enabled",
        "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Get_Warehouse_state": {
                "inputs": {
                    "authentication": {
                        "type": "ManagedServiceIdentity"
                    },
                    "method": "GET",
                    "uri": "https://management.azure.com/subscriptions/@{variables('RestAPIVariables')['SubscriptionId']}/resourceGroups/@{variables('RestAPIVariables')['ResourceGroupName']}/providers/Microsoft.Sql/servers/@{variables('RestAPIVariables')['ServerName']}/databases/@{variables('RestAPIVariables')['DatabaseName']}?api-version=2017-10-01-preview"
                },
                "runAfter": {
                    "Initialize_ActiveQueryCount_variable": [
                        "Succeeded"
                    ]
                },
                "type": "Http"
            },
            "Initialize_API_variables": {
                "inputs": {
                    "variables": [
                        {
                          "name": "RestAPIVariables",
                          "type": "Object",
                          "value": {
                            "ServerName": "[parameters('SQL DW ServerName')]",
                            "DatabaseName": "[parameters('SQL DW Name')]",
                            "ResourceGroupName": "[parameters('SQL DW ResourceGroup')]",
                            "SubscriptionId": "[subscription().subscriptionId]",
                            "TenantId": "[subscription().tenantId]",
                            "ScheduleTimeZone": "[parameters('TIME_ZONE')]",
                            "ScaleUpTime": "[variables('scaleUpTimeString')]",
                            "ScaleUpSLO": "[parameters('ScaleUpSLO')]",
                            "ScaleDownTime": "[variables('scaleDownTimeString')]",
                            "ScaleDownSLO": "[parameters('ScaleDownSLO')]"
                          }
                        }
                    ]
                },
                "runAfter": {},
                "type": "InitializeVariable"
            },
            "Initialize_ActiveQueryCount_variable": {
                "inputs": {
                    "variables": [
                        {
                            "name": "ActiveQueryCount",
                            "type": "Integer",
                            "value": 1
                        }
                    ]
                },
                "runAfter": {
                    "Initialize_API_variables": [
                        "Succeeded"
                    ]
                },
                "type": "InitializeVariable"
            },
            "ScaleDownDataWarehouseIfApplicable": {
                "actions": {
                    "ScaleDown_Data_Warehouse": {
                        "inputs": {
                            "authentication": {
                                "type": "ManagedServiceIdentity"
                            },
                            "body": {
                                "location": "@{body('Get_Warehouse_state')['location']}",
                                "sku": {
                                    "name": "@{variables('RestAPIVariables')['ScaleDownSLO']}"
                                }
                            },
                            "method": "PUT",
                            "uri": "https://management.azure.com/subscriptions/@{variables('RestAPIVariables')['SubscriptionId']}/resourceGroups/@{variables('RestAPIVariables')['ResourceGroupName']}/providers/Microsoft.Sql/servers/@{variables('RestAPIVariables')['ServerName']}/databases/@{variables('RestAPIVariables')['DatabaseName']}?api-version=2017-10-01-preview"
                        },
                        "runAfter": {},
                        "type": "Http"
                    }
                },
                "expression": {
                    "and": [
                        {
                            "equals": [
                                "@body('Get_Warehouse_state')['properties']['status']",
                                "Online"
                            ]
                        },
                        {
                            "greaterOrEquals": [
                                "@convertFromUtc(utcNow(), variables('RestAPIVariables')['ScheduleTimeZone'], 't')",
                                "@addMinutes(variables('RestAPIVariables')['ScaleDownTime'], -5, 't')"
                            ]
                        },
                        {
                            "less": [
                                "@convertFromUtc(utcNow(), variables('RestAPIVariables')['ScheduleTimeZone'], 't')",
                                "@addMinutes(variables('RestAPIVariables')['scaleDownTime'], 11, 't')"
                            ]
                        }
                    ]
                },
                "runAfter": {
                    "Until_ZeroActiveQueries": [
                        "Succeeded"
                    ]
                },
                "type": "If"
            },
            "ScaleUpDataWarehouseIfApplicable": {
                "actions": {
                    "ScaleUp_Data_Warehouse": {
                        "inputs": {
                            "authentication": {
                                "type": "ManagedServiceIdentity"
                            },
                            "body": {
                                "location": "@{body('Get_Warehouse_state')['location']}",
                                "sku": {
                                    "name": "@variables('RestAPIVariables')['ScaleUpSLO']"
                                }
                            },
                            "method": "PUT",
                            "uri": "https://management.azure.com/subscriptions/@{variables('RestAPIVariables')['SubscriptionId']}/resourceGroups/@{variables('RestAPIVariables')['ResourceGroupName']}/providers/Microsoft.Sql/servers/@{variables('RestAPIVariables')['ServerName']}/databases/@{variables('RestAPIVariables')['DatabaseName']}?api-version=2017-10-01-preview"
                        },
                        "runAfter": {},
                        "type": "Http"
                    }
                },
                "expression": {
                    "and": [
                        {
                            "equals": [
                                "@body('Get_Warehouse_state')['properties']['status']",
                                "Online"
                            ]
                        },
                        {
                            "greaterOrEquals": [
                                "@convertFromUtc(utcNow(), variables('RestAPIVariables')['ScheduleTimeZone'], 't')",
                                "@addMinutes(variables('RestAPIVariables')['ScaleUpTime'], -5, 't')"
                            ]
                        },
                        {
                            "less": [
                                "@convertFromUtc(utcNow(), variables('RestAPIVariables')['ScheduleTimeZone'], 't')",
                                "@addMinutes(variables('RestAPIVariables')['ScaleUpTime'], 11, 't')"
                            ]
                        }
                    ]
                },
                "runAfter": {
                    "Until_ZeroActiveQueries": [
                        "Succeeded"
                    ]
                },
                "type": "If"
            },
            "Until_ZeroActiveQueries": {
                "actions": {
                    "GetActiveQueryCount": {
                        "inputs": {
                            "authentication": {
                                "type": "ManagedServiceIdentity"
                            },
                            "method": "GET",
                            "uri": "https://management.azure.com/subscriptions/@{variables('RestAPIVariables')['SubscriptionId']}/resourceGroups/@{variables('RestAPIVariables')['ResourceGroupName']}/providers/Microsoft.Sql/servers/@{variables('RestAPIVariables')['ServerName']}/databases/@{variables('RestAPIVariables')['DatabaseName']}/dataWarehouseUserActivities/current?api-version=2017-03-01-preview"
                        },
                        "runAfter": {},
                        "type": "Http"
                    },
                    "Update_ActiveQueryCount_variable": {
                        "inputs": {
                            "name": "ActiveQueryCount",
                            "value": "@body('GetActiveQueryCount')['properties']['activeQueriesCount']"
                        },
                        "runAfter": {
                            "GetActiveQueryCount": [
                                "Succeeded"
                            ]
                        },
                        "type": "SetVariable"
                    },
                    "Update_ActiveQueryCount_variable_if_error": {
                        "inputs": {
                            "name": "ActiveQueryCount",
                            "value": -1
                        },
                        "runAfter": {
                            "GetActiveQueryCount": [
                                "Failed"
                            ]
                        },
                        "type": "SetVariable"
                    },
                    "Wait5minsIfActiveQuery": {
                        "actions": {
                            "Wait_5mins": {
                                "inputs": {
                                    "interval": {
                                        "count": 5,
                                        "unit": "Minute"
                                    }
                                },
                                "runAfter": {},
                                "type": "Wait"
                            }
                        },
                        "expression": {
                            "and": [
                                {
                                    "greater": [
                                        "@variables('ActiveQueryCount')",
                                        0
                                    ]
                                }
                            ]
                        },
                        "runAfter": {
                            "Update_ActiveQueryCount_variable": [
                                "Succeeded"
                            ]
                        },
                        "type": "If"
                    }
                },
                "expression": "@lessOrEquals(variables('ActiveQueryCount'), 0)",
                "limit": {
                    "count": 200,
                    "timeout": "PT3H"
                },
                "runAfter": {
                    "Get_Warehouse_state": [
                        "Succeeded"
                    ]
                },
                "type": "Until"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "parameters": {},
        "triggers": {
            "Recurrence": {
                "recurrence": {
                    "frequency": "Week",
                    "interval": 1,
                    "schedule": {
                        "hours": [
                            " 8",
                            " 5"
                        ],
                        "minutes": [
                            0,
                            30
                        ],
                        "weekDays": [
                            "Monday",
                            "Tuesday",
                            "Wednesday",
                            "Thursday",
                            "Friday"
                        ]
                    },
                    "startTime": "2019-01-01T00:00:00Z",
                    "timeZone": "Pacific Standard Time"
                },
                "type": "Recurrence"
            }
        }
    },
        "parameters": {},
        "integrationAccount": null
      }        
    }    
  ],
  "outputs": {}
}