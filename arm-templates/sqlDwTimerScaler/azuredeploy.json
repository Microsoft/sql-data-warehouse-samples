                "08:30 AM (  8:30 )",
                "09:00 AM (  9:00 )",
                "09:30 AM (  9:30 )",
                "10:00 AM ( 10:00 )",
                "10:30 AM ( 10:30 )",
                "11:00 AM ( 11:00 )",
                "11:30 AM ( 11:30 )",
                "12:00 PM ( 12:00 )",
                "12:30 PM ( 12:30 )",
                "01:00 PM ( 13:00 )",
                "01:30 PM ( 13:30 )",
                "02:00 PM ( 14:00 )",
                "02:30 PM ( 14:30 )",
                "03:00 PM ( 15:00 )",
                "03:30 PM ( 15:30 )",
                "04:00 PM ( 16:00 )",
                "04:30 PM ( 16:30 )",
                "05:00 PM ( 17:00 )",
                "05:30 PM ( 17:30 )",
                "06:00 PM ( 18:00 )",
                "06:30 PM ( 18:30 )",
                "07:00 PM ( 19:00 )",
                "07:30 PM ( 19:30 )",
                "08:00 PM ( 20:00 )",
                "08:30 PM ( 20:30 )",
                "09:00 PM ( 21:00 )",
                "09:30 PM ( 21:30 )",
                "10:00 PM ( 22:00 )",
                "10:30 PM ( 22:30 )",
                "11:00 PM ( 23:00 )",
                "11:30 PM ( 23:30 )"
            ]
        },
        "scaleDownTime": {
            "type": "string",
            "metadata": {
                "description": "Time of day when data warehouse will be scaled down."
            },
            "allowedValues": [
                "12:00 AM (  0:00 )",
                "12:30 AM (  0:30 )",
                "01:00 AM (  1:00 )",
                "01:30 AM (  1:30 )",
                "02:00 AM (  2:00 )",
                "02:30 AM (  2:30 )",
                "03:00 AM (  3:00 )",
                "03:30 AM (  3:30 )",
                "04:00 AM (  4:00 )",
                "04:30 AM (  4:30 )",
                "05:00 AM (  5:00 )",
                "05:30 AM (  5:30 )",
                "06:00 AM (  6:00 )",
                "06:30 AM (  6:30 )",
                "07:00 AM (  7:00 )",
                "07:30 AM (  7:30 )",
                "08:00 AM (  8:00 )",
                "08:30 AM (  8:30 )",
                "09:00 AM (  9:00 )",
                "09:30 AM (  9:30 )",
                "10:00 AM ( 10:00 )",
                "10:30 AM ( 10:30 )",
                "11:00 AM ( 11:00 )",
                "11:30 AM ( 11:30 )",
                "12:00 PM ( 12:00 )",
                "12:30 PM ( 12:30 )",
                "01:00 PM ( 13:00 )",
                "01:30 PM ( 13:30 )",
                "02:00 PM ( 14:00 )",
                "02:30 PM ( 14:30 )",
                "03:00 PM ( 15:00 )",
                "03:30 PM ( 15:30 )",
                "04:00 PM ( 16:00 )",
                "04:30 PM ( 16:30 )",
                "05:00 PM ( 17:00 )",
                "05:30 PM ( 17:30 )",
                "06:00 PM ( 18:00 )",
                "06:30 PM ( 18:30 )",
                "07:00 PM ( 19:00 )",
                "07:30 PM ( 19:30 )",
                "08:00 PM ( 20:00 )",
                "08:30 PM ( 20:30 )",
                "09:00 PM ( 21:00 )",
                "09:30 PM ( 21:30 )",
                "10:00 PM ( 22:00 )",
                "10:30 PM ( 22:30 )",
                "11:00 PM ( 23:00 )",
                "11:30 PM ( 23:30 )"
            ]
        }
    },
    "variables": {
        "functionApp Service Name": "[parameters('App Service Name')]",
        "hostingPlanName": "[concat(parameters('App Service Name'),'plan')]",
        "storageAccountName": "[concat(uniquestring(resourceGroup().id), 'azfunctions')]",
        "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "scaleUpTimeMinute": "[replace(split(substring(parameters('scaleUpTime'), 11, 5), ':')[1],'00', '0')]",
        "scaleUpTimeHour": "[split(substring(parameters('scaleUpTime'), 11, 5), ':')[0]]",
        "scaleDownTimeMinute": "[replace(split(substring(parameters('scaleDownTime'), 11, 5), ':')[1], '00', '0')]",
        "scaleDownTimeHour": "[split(substring(parameters('scaleDownTime'), 11, 5), ':')[0]]",
        "scaleUpTime": "[replace(replace('0 x y * * *', 'x', variables('scaleUpTimeMinute')), 'y', variables('scaleUpTimeHour'))]",
        "scaleDownTime": "[replace(replace('0 x y * * *', 'x', variables('scaleDownTimeMinute')), 'y', variables('scaleDownTimeHour'))]",
        "codePackageLocation": "https://github.com/Microsoft/sql-data-warehouse-samples/blob/master/arm-templates/sqlDwTimerScaler/sqlDwTimerScaler.zip?raw=true"
    },
    "resources": [{
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "kind": "Storage",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2016-12-01",
            "location": "[resourceGroup().location]"
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "name": "[variables('hostingPlanName')]",
            "apiVersion": "2015-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[variables('functionApp Service Name')]",
            "apiVersion": "2015-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "appSettings": [{
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.5.0"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('functionApp Service Name'))]"
                        },
                        {
                            "name": "WEBSITE_TIME_ZONE",
                            "value": "[parameters('WEBSITE_TIME_ZONE')]"
                        },
                        {
                            "name": "SubscriptionId",
                            "value": "[parameters('Subscription ID')]"
                        },
                        {
                            "name": "TenantId",
                            "value": "[parameters('Active Directory ID')]"
                        },
                        {
                            "name": "ClientId",
                            "value": "[parameters('Service Principal Application ID')]"
                        },
                        {
                            "name": "ClientKey",
                            "value": "[parameters('Service Principal Secret Key')]"
                        },
                        {
                            "name": "ResourceGroup",
                            "value": "[parameters('SQL DW Resource Group')]"
                        },
                        {
                            "name": "ServerName",
                            "value": "[parameters('SQL DW Logical Server Name')]"
                        },
                        {
                            "name": "DatabaseName",
                            "value": "[parameters('SQL DW Name')]"
                        },
                        {
                            "name": "ScaleUpTime",
                            "value": "[variables('scaleUpTime')]"
                        },
                        {
                            "name": "ScaleDownTime",
                            "value": "[variables('scaleDownTime')]"
                        }
                    ]
                }
            },
            "resources": [{
                "type": "extensions",
                "name": "MSDeploy",
                "apiVersion": "2015-08-01",
                "location": "[resourceGroup().location]",
                "tags": {
                    "displayName": "webdeploy"
                },
                "properties": {
                    "packageUri": "[variables('codePackageLocation')]",
                    "dbType": "None",
                    "connectionString": ""
                },
                "dependsOn": [
                    "[concat('Microsoft.Web/sites/', variables('functionApp Service Name'))]"
                ]
            }],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ]
        }
    ]
}